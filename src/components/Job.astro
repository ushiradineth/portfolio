---
import type { Job } from "../lib/types";
import List from "./List.astro";
import Underline from "./Underline.astro";
import RoundedIcon from "./RoundedIcon.astro";
interface Props {
	job: Job;
}

const { job } = Astro.props;
---

<div class="flex flex-col gap-4">
	<div class="flex border-border gap-2 items-center">
		<RoundedIcon icon={job.icon} alt={job.company} />
		<div class="flex flex-col">
			<a href={job.href} class="group w-fit">
				<Underline>
					<span class="flex items-center justify-center gap-2">
						<h2 class="font-medium text-xl">{job.company}</h2>
						<div class="transform transition-transform duration-500 ease-in-out group-hover:-rotate-12">&rarr;</div>
					</span>
				</Underline>
			</a>
			<p class="text-muted">{job.designation} â€¢ {job.period}</p>
		</div>
	</div>
	<List>
		{job.points.map((point) => <li>{point}</li>)}
	</List>
</div>
