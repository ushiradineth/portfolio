---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import { Image } from "astro:assets";
import { images, socials } from "../lib/data";
import ImageGallery from "../components/ImageGallery.astro";
import SocialCard from "../components/SocialCard.astro";

import self from "../images/self.png";
---

<Layout title="Hey, I'm Ushira ðŸ‘‹" description="ushira.com">
	<main class="flex flex-col gap-8 min-w-[50%]">
		<div class="flex flex-col gap-4 items-center justify-start md:block">
			<Image
				class="md:hidden rounded-full object-cover w-20 h-20 drop-shadow-xl group-hover:scale-110 transition-all duration-500"
				src={self}
				alt={"Ushira Dineth"}
			/>
			<Title>Hey, I'm Ushira ðŸ‘‹</Title>
		</div>
		<div class="flex flex-col-reverse md:flex-row gap-8 md:gap-60">
			<span class="flex flex-col gap-2">
				<p>
					I'm a full stack software engineer focused on building products with extra attention to detail from UI/UX to Infrastructure and
					everything in between.
				</p>
				<p>I have taken part in multiple project learning and understanding how software is built from end to end.</p>
				<p>Currently, I work with TypeScript, NextJS, Terraform and Kuberentes.</p>
				<p>I'm currently learning Go!</p>
			</span>
			<Image src={self} alt={"Ushira Dineth"} class={"rounded-lg w-52 h-52 hidden md:block"} />
		</div>
		<span class="flex ml-auto">
			<ImageGallery images={images} />
		</span>

		<p>Below are the other places you can find me;</p>

		<div class="grid grid-cols-1 md:grid-cols-3 justify-between gap-2 h-full w-full">
			{socials.map((social) => <SocialCard social={social} />)}
		</div>
	</main>
</Layout>
