---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import Job from "../components/Job.astro";
import { border } from "../lib/utils.ts";
import { jobs } from "../lib/data.ts";
---

<Layout title="Work Experience" description="ushira.com">
	<main class="flex flex-col min-w-[50%]">
		<Title>Work</Title>
		{
			jobs.map((job, index) => (
				<div class={`${border(index, jobs.length)} border-muted border-dashed py-8`}>
					<Job job={job} />
				</div>
			))
		}
	</main>
</Layout>
