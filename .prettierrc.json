{
  "plugins": ["prettier-plugin-astro"],
  "printWidth": 140,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": true,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "bracketSameLine": true,
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
